Subject: [PATCH] Fix Vercel deployment: update output directory to dist/public

---
 vercel.json | 17 ++++++-----------
 1 file changed, 6 insertions(+), 11 deletions(-)

diff --git a/vercel.json b/vercel.json
index 3173bec..1943365 100644
--- a/vercel.json
+++ b/vercel.json
@@ -1,17 +1,12 @@
 {
-  "version": 2,
-  "buildCommand": "pnpm build",
-  "devCommand": "pnpm dev",
+  "buildCommand": "pnpm install && pnpm build",
+  "outputDirectory": "dist/public",
   "installCommand": "pnpm install",
-  "framework": "vite",
-  "outputDirectory": "client/dist",
+  "framework": null,
   "rewrites": [
     {
-      "source": "/api/(.*)",
-      "destination": "/server/_core/index.ts"
+      "source": "/(.*)",
+      "destination": "/"
     }
-  ],
-  "env": {
-    "NODE_ENV": "production"
-  }
+  ]
 }
